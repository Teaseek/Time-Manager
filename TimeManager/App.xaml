             xmlns:local="clr-namespace:TimeManager"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Dictionaries/Colors.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/TextRU.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/ControlTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
